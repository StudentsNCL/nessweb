<div class="row">
    {{#each stages}}
    <div class="col-md-12">
        <h1>Stage {{stage}}{{#if mark}} - {{mark}}%{{/if}}</h1>
        <table class="table table-condensed table-striped">
            <thead>
                <tr>
                    <th>Module</th>
                    <th>Credits</th>
                    <th>Attempt</th>
                    <th>Attempt Mark</th>
                    <th>Final Mark</th>
                    <th>Decision</th>
                    <th>Attendance</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
             {{#each modules}}
                <tr>
                    <td>{{code}}</td>
                    <td>{{credits}}</td>
                    <td>{{attempt}}</td>
                    <td>{{attemptMark}}</td>
                    <td>{{finalMark}}</td>
                    <td>{{decision}}</td>
                    <td>{{#gte attendance.attendance 0}}{{attendance.attendance}}%{{else}}-{{/gte}}</td>
                    <td><a href="/modules/{{year}}/{{../stage}}/{{id}}">View Details</a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    {{/each}}
</div>
