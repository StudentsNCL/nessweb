<div class="row">
    {{#each coursework}}
    <div class="col-md-12">
        <h1>{{code}}: {{title}}</h1>
        <table class="table table-condensed table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
             {{#each this.coursework}}
                <tr>
                    <td width="78%">{{#if url}}<a href="{{url}}">{{title}}</a>{{else}}{{title}}{{/if}}</td>
                    {{#if mark}}
                    <td>
                        <div class="progress" style="margin-bottom:5px;">
                          <div title="{{mark.mark}} out of {{mark.total}}" class="progress-bar animated-bar" role="progressbar" aria-valuenow="{{getMarkPercentage mark}}" aria-valuemin="0" aria-valuemax="100" data-width="{{getMarkPercentage mark}}" style="width: 0%;">
                            {{getMarkPercentage mark}}%
                          </div>
                        </div>
                        <a href="{{#if general}}feedback/general/{{general}}{{/if}}" data-toggle="modal" data-target="#feedback-modal" class="btn btn-default btn-xs feedback-button {{#unless general}}disabled{{/unless}}" role="button">General Feedback</a>
                        <a href="{{#if feedback}}feedback/personal/{{feedback}}{{/if}}" data-toggle="modal" data-target="#feedback-modal"  class="btn btn-default btn-xs feedback-button {{#unless feedback}}disabled{{/unless}}" role="button">Personal Feedback</a>
                    </td>
                    {{else}}
                        {{#if submitted}}
                            <td title="{{formatDate submitted}}">Submitted {{dueDate submitted}}</td>
                        {{else}}
                        <td title="{{formatDate due}}">Due {{dueDate due}}</td>
                        {{/if}}
                    {{/if}}
                </tr>
            {{/each}}
            </tbody>
        </table>

        <div id="feedback-modal" class="modal fade">
          <div class="modal-dialog">
            <div class="modal-content">
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

    </div>
    {{/each}}
</div>