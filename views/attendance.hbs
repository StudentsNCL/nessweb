<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <tr>
                <th>Module Code</th>
                <th>Module Name</th>
                <th>Attendance %</th>
                <th>Attended / Total</th>
            </tr>
            {{#each modules}}
            <tr>
                <td>{{code}}</td>
                <td>{{title}}</td>
                <td>{{#if attendance}}{{attendance}}%{{else}}-{{/if}}</td>
                <td>{{#if numLecturesAttended}}{{numLecturesAttended}}/{{numLecturesTotal}}{{else}}-{{/if}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>