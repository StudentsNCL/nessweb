<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <tr>
                <th>Module Code</th>
                <th>Module Name</th>
                <th>Attendance %</th>
                <th>Attended / Total</th>
            </tr>
            {{#each modules}}
            <tr>
                <td>{{code}}</td>
                <td>{{title}}</td>
                <td>{{#if attendance}}
                    <div class="progress">
                      <div class="progress-bar animated-bar" role="progressbar" aria-valuenow="{{attendance}}" aria-valuemin="0" aria-valuemax="100" data-width="{{attendance}}" style="width: 0%;">
                        {{attendance}}%
                      </div>
                    </div>
                    {{else}}-{{/if}}</td>
                <td>{{#if numLecturesAttended}}{{numLecturesAttended}}/{{numLecturesTotal}}{{else}}-{{/if}}</td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>